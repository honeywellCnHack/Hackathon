<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_battery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_background_card_margin_left"
                android:layout_marginRight="@dimen/activity_background_card_margin_right"
                android:layout_marginTop="@dimen/activity_background_card_margin_top"
                card_view:cardBackgroundColor="@color/color_cardview"
                card_view:cardCornerRadius="@dimen/activity_background_card_corner_radius">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:contentDescription="@null"
                        android:elevation="100sp"
                        android:src="@drawable/air"></ImageView>

                    <TextView
                        android:id="@+id/battery_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@+id/icon_battery"
                        android:elevation="100sp"
                        android:textSize="50dp"
                        android:text="@string/battery_level"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    <TextView
                        android:id="@+id/battery_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/battery_level"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/icon_battery"


                        android:text="@string/battery_health"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_prediction1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_battery"
                android:layout_marginLeft="@dimen/activity_background_card_margin_left"
                android:layout_marginRight="@dimen/activity_background_card_margin_right"
                android:layout_marginTop="@dimen/activity_background_card_margin_top"
                card_view:cardBackgroundColor="@color/color_cardview"
                card_view:cardCornerRadius="@dimen/activity_background_card_corner_radius">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:text="@string/battery_info"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        android:textSize="26dp"></TextView>

                    <LinearLayout
                        android:id="@+id/info_sn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_title"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/battery_info_sn"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/battery_info_sn_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_temperature"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_sn"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/battery_info_temperature"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/battery_info_temperture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_voltage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_temperature"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/battery_info_voltage"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/battery_info_voltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_internal_temperature"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_voltage"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/battery_info_internal_temperature"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/battery_info_internal_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/info_charging_cycles"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_internal_temperature"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/battery_info_charging_cycles"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/battery_info_charging_cycles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_state_of_health"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_charging_cycles"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/battery_info_state_of_health"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/battery_info_health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_prediction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_prediction1"
                android:layout_marginBottom="@dimen/activity_background_card_margin_bottom"
                android:layout_marginLeft="@dimen/activity_background_card_margin_left"
                android:layout_marginRight="@dimen/activity_background_card_margin_right"
                android:layout_marginTop="@dimen/activity_background_card_margin_top"
                card_view:cardBackgroundColor="@color/color_cardview"
                card_view:cardCornerRadius="@dimen/activity_background_card_corner_radius">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/remaining_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        android:textSize="28dp"></TextView>

                    <LinearLayout
                        android:id="@+id/idle_on"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/remaining_title"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:elevation="100sp"
                            android:src="@drawable/ic_scan_on"></ImageView>

                        <TextView
                            android:id="@+id/idle_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/power_remaining_scan"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/idle_on_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/power_on"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/idle_on"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:elevation="100sp"
                            android:src="@drawable/ic_smartphone_on"></ImageView>

                        <TextView
                            android:id="@+id/screen_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/power_remaining_screen"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/screen_on_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phone_on"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/power_on"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:elevation="100sp"
                            android:src="@drawable/ic_call_on"></ImageView>

                        <TextView
                            android:id="@+id/phone_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/power_remaining_phone"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/power_on_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wifi_on"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone_on"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:elevation="100sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:elevation="100sp"
                            android:src="@drawable/ic_wifi_on"></ImageView>

                        <TextView
                            android:id="@+id/wifi_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/power_remaining_wifi"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                        <TextView
                            android:id="@+id/wifi_on_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>